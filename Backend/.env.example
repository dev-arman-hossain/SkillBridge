# .env.example

# Port where the server will run
PORT=5000

# Database connection string
DATABASE_URL="postgresql://<username>:<password>@<host>:<port>/<database>?sslmode=require&channel_binding=require"

# Better Auth Secret (Keep this value secret)
BETTER_AUTH_SECRET="<your_better_auth_secret>"

# Better Auth URL (URL where your auth service is hosted)
BETTER_AUTH_URL="http://localhost:5000"

# Application URL
APP_URL="http://localhost:3000"

# Google OAuth Client ID (Obtain this from the Google Developer Console)
GOOGLE_CLIENT_ID="<your_google_client_id>"

# Google OAuth Client Secret (Obtain this from the Google Developer Console)
GOOGLE_CLIENT_SECRET="<your_google_client_secret>"